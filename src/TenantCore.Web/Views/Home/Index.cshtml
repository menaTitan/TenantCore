@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">
            <i class="fas fa-layer-group text-primary me-3"></i>TenantCore
        </h1>
        <p class="lead mb-5">Multi-Tenant SaaS Platform</p>
        
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="d-grid gap-3">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <a asp-controller="SuperAdmin" asp-action="Dashboard" class="btn btn-primary btn-lg">
                                Go to SuperAdmin Dashboard
                            </a>
                        }
                        else if (User.IsInRole("TenantAdmin"))
                        {
                            <a asp-controller="TenantAdmin" asp-action="Dashboard" class="btn btn-primary btn-lg">
                                Go to Dashboard
                            </a>
                        }
                    }
                    else
                    {
                        <div class="d-flex gap-3 justify-content-center">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-5">
                                Sign In
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg px-5">
                                Create Account
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
