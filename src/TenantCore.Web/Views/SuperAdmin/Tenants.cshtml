@model IEnumerable<TenantCore.Application.DTOs.TenantDto>
@{
    ViewData["Title"] = "Tenant Management";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Tenant Management</h1>
            <p class="text-secondary mb-0">Manage all tenants in the system</p>
        </div>
        <a asp-action="CreateTenant" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50 me-2"></i>Create Tenant
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-start border-primary border-4 h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Tenants
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count()
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-start border-success border-4 h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Active Tenants
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(t => t.IsActive)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-start border-warning border-4 h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Inactive Tenants
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(t => !t.IsActive)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tenants Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Tenants</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="tenantsTable">
                    <thead>
                        <tr>
                            <th>Organization</th>
                            <th>Domain</th>
                            <th>Status</th>
                            <th>Users</th>
                            <th>Subscription</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tenant in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@tenant.Name</strong>
                                    @if (!string.IsNullOrEmpty(tenant.BillingEmail))
                                    {
                                        <br />
                                        <small class="text-muted">@tenant.BillingEmail</small>
                                    }
                                </td>
                                <td><code>@tenant.Domain</code></td>
                                <td>
                                    @if (tenant.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-users text-muted me-1"></i>
                                    @tenant.UserCount
                                    @if (tenant.CurrentSubscription != null)
                                    {
                                        <span class="text-muted">/ @tenant.CurrentSubscription.MaxUsers</span>
                                    }
                                </td>
                                <td>
                                    @if (tenant.CurrentSubscription != null)
                                    {
                                        <span class="badge bg-@(tenant.CurrentSubscription.IsActive ? "success" : "warning")">
                                            @tenant.CurrentSubscription.PlanName
                                        </span>
                                        <br />
                                        <small class="text-muted">@tenant.CurrentSubscription.Status</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No subscription</span>
                                    }
                                </td>
                                <td>@tenant.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <!-- View Tenant Dashboard -->
                                        <a asp-controller="TenantAdmin"
                                           asp-action="Dashboard"
                                           asp-route-tenantId="@tenant.Id"
                                           class="btn btn-sm btn-primary"
                                           title="View Tenant Dashboard">
                                            <i class="fas fa-tachometer-alt"></i>
                                        </a>

                                        <!-- Manage Users -->
                                        <a asp-controller="TenantAdmin"
                                           asp-action="Users"
                                           asp-route-tenantId="@tenant.Id"
                                           class="btn btn-sm btn-info"
                                           title="Manage Users">
                                            <i class="fas fa-users"></i>
                                        </a>

                                        <!-- Manage Subscription -->
                                        <a asp-controller="TenantAdmin"
                                           asp-action="Subscription"
                                           asp-route-tenantId="@tenant.Id"
                                           class="btn btn-sm btn-success"
                                           title="Manage Subscription">
                                            <i class="fas fa-credit-card"></i>
                                        </a>

                                        <!-- Settings -->
                                        <a asp-controller="TenantAdmin"
                                           asp-action="Settings"
                                           asp-route-tenantId="@tenant.Id"
                                           class="btn btn-sm btn-secondary"
                                           title="Tenant Settings">
                                            <i class="fas fa-cog"></i>
                                        </a>

                                        <!-- API Key -->
                                        <a asp-controller="TenantAdmin"
                                           asp-action="ApiKey"
                                           asp-route-tenantId="@tenant.Id"
                                           class="btn btn-sm btn-dark"
                                           title="Manage API Key">
                                            <i class="fas fa-key"></i>
                                        </a>

                                        <!-- Deactivate -->
                                        @if (tenant.IsActive)
                                        {
                                            <form asp-action="DeactivateTenant" asp-route-tenantId="@tenant.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-warning" title="Deactivate Tenant"
                                                        onclick="return confirm('Are you sure you want to deactivate @tenant.Name?')">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}
