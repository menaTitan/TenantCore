@model TenantCore.Application.Commands.CreateTenantCommand

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <h1 class="h3 fw-bold text-primary">
                    <i class="fas fa-layer-group me-2"></i>TenantCore
                </h1>
                <p class="text-secondary">Create your organization account</p>
            </div>
            
            <div class="card shadow-lg border-0">
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <h5 class="mb-3">Organization Information</h5>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Company Name" />
                            <label asp-for="Name">Organization Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Domain" class="form-control" placeholder="Domain" />
                            <label asp-for="Domain">Domain (lowercase, no spaces)</label>
                            <span asp-validation-for="Domain" class="text-danger"></span>
                            <small class="text-muted">Example: mycompany</small>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="BillingEmail" class="form-control" placeholder="Billing Email" />
                            <label asp-for="BillingEmail">Billing Email</label>
                            <span asp-validation-for="BillingEmail" class="text-danger"></span>
                        </div>
                        
                        <hr class="my-4">
                        
                        <h5 class="mb-3">Administrator Account</h5>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="AdminFirstName" class="form-control" placeholder="First Name" />
                                    <label asp-for="AdminFirstName">First Name</label>
                                    <span asp-validation-for="AdminFirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="AdminLastName" class="form-control" placeholder="Last Name" />
                                    <label asp-for="AdminLastName">Last Name</label>
                                    <span asp-validation-for="AdminLastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="AdminEmail" class="form-control" placeholder="Email" />
                            <label asp-for="AdminEmail">Email</label>
                            <span asp-validation-for="AdminEmail" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="AdminPassword" type="password" class="form-control" placeholder="Password" />
                            <label asp-for="AdminPassword">Password</label>
                            <span asp-validation-for="AdminPassword" class="text-danger"></span>
                        </div>
                        
                        <hr class="my-4">
                        
                        <h5 class="mb-3">Select Plan</h5>
                        
                        <div class="mb-3">
                            @if (ViewBag.Plans != null)
                            {
                                foreach (var plan in ViewBag.Plans)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="PlanId" value="@plan.Id" id="plan_@plan.Id" checked="@(plan.Name == "Free Trial")">
                                        <label class="form-check-label" for="plan_@plan.Id">
                                            <strong>@plan.Name</strong> - $@plan.PricePerMonth/month
                                            <br><small class="text-muted">@plan.Description</small>
                                        </label>
                                    </div>
                                }
                            }
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Create Organization</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3 border-0 rounded-bottom">
                    <p class="mb-0 small">
                        Already have an account? 
                        <a asp-action="Login" class="fw-bold text-primary text-decoration-none">Sign in</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
